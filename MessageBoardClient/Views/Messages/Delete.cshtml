@{
  ViewData["Title"] = $"Delete {Model.Subject}";
}

@model MessageBoardClient.Models.Message

<h4>Are you sure you want to delete "@Model.Subject"?</h4>

@using (Html.BeginForm())
{
  <input type="submit" value="Delete" class="btn btn-primary"/>
}

@Html.ActionLink("Back to details", "Details", new { id = @Model.MessageId})